@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h1 class="jumbotron">
  New Client:
  <p>@Html.ActionLink("Clients", "Index") || @Html.ActionLink("Stylists", "Index", "Stylists") || @Html.ActionLink("Home", "Index", "Home")</p>
</h1>
<div class="container">
  @using (Html.BeginForm())
  {
    <div class ="form-group">
      <h4>Name</h4>
      @Html.TextBoxFor(model => model.Name, new{@class="form-control"})
      <h4>Phone Number</h4>
      @Html.TextBoxFor(model => model.PhoneNumber, new{@class="form-control"})
      <h4>Hair Style</h4>
      @Html.TextBoxFor(model => model.HairStyle, new{@class="form-control"})
      <h4>Stylist</h4>
      @Html.DropDownList("StylistId", null, new{@class="form-control"})
      <br>
      <input type="submit" value="Add New Client" class="btn btn-secondary" />
      <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index", "Clients")';" class="btn btn-secondary" />
    </div>
  }
</div>
