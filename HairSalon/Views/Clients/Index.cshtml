@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

  <h1>Clients</h1>
  @if (Model.Count == 0)
  {
    <p>No clients have been added to the system</p>
  }

  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{@client.Name}", "Show", new {id = client.ClientId}) | [Stylist: @client.Stylist.Name]</li>
    }
  </ul>

  <p>@Html.ActionLink("New Client", "Create") || @Html.ActionLink("View Stylists", "Index", "Stylists") || @Html.ActionLink("Home", "Index", "Home")</p>