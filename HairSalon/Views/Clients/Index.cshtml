@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h1>Clients</h1>
<div class="container-fluid">
  @if (Model.Count == 0)
  {
    <p>No clients have been added to the system</p>
    @Html.ActionLink("New Client", "Create")

    <div class="bottom">
      <p>@Html.ActionLink("View Stylists", "Index", "Stylists") || @Html.ActionLink("Home", "Index", "Home")</p>
    </div>
  }
  else
  {
    <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{@client.Name}", "Show", new {id = client.ClientId})</li>
    }
    </ul>
    @Html.ActionLink("New Client", "Create")

    <div class="bottom">
      <p>@Html.ActionLink("Stylists", "Index", "Stylists") || @Html.ActionLink("Home", "Index", "Home")</p>
    </div>
  }
</div>

