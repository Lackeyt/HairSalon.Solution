@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Stylist>

  <h1>Stylists</h1>
  <div class="container">
    @if (Model.Count == 0)
    {
      <p>No Stylists have been added to the system!</p>
      <input type="button" value="New Stylist" onclick="location.href='@Url.Action("Create", "Stylists")';" class="btn btn-secondary" />
    }
    else
    {
      <br>
      <p><strong>Choose your Stylist:</strong></p>
      <ul>
        @foreach (Stylist stylist in Model)
        {
          <li>@Html.ActionLink($"{@stylist.Name}", "Show", new {id = stylist.StylistId})</li>
        }
      </ul>
      <input type="button" value="New Stylist" onclick="location.href='@Url.Action("Create", "Stylists")';" class="btn btn-secondary" />

      <div class="bottom">
        <p>@Html.ActionLink("Clients", "Index", "Clients") || @Html.ActionLink("Home", "Index", "Home")</p>
      </div>
    }
  </div>
  