@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Stylist>

  <h1>Stylists</h1>
  <div class="container-fluid">
    @if (Model.Count == 0)
    {
      <p>No Stylists have been added to the system!</p>
      <p>@Html.ActionLink("New Stylist", "Create")</p>
    }
    else
    {
      <ul>
        @foreach (Stylist stylist in Model)
        {
          <li>@Html.ActionLink($"{@stylist.Name}", "Show", new {id = stylist.StylistId})</li>
        }
      </ul>
      <p>@Html.ActionLink("New Stylist", "Create")</p>

      <div class="bottom">
        <p>@Html.ActionLink("Clients", "Index", "Clients") || @Html.ActionLink("Home", "Index", "Home")</p>
      </div>
    }
  </div>
  