@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h1>Stylist Details:</h1>

@using (Html.BeginForm())
{
  <div class ="form-group">
    <h4>Name</h4>
    @Html.TextBoxFor(model => model.Name, new{@class="form-control"})
    <h4>About</h4>
    @Html.TextBoxFor(model => model.About, new{@class="form-control"})
    <input type="submit" value="Add Stylist" class="btn btn-secondary" />
    <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index", "Stylists")';" class="btn btn-secondary" />
  </div>
}