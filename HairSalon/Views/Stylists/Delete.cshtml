@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1 class="jumbotron">
  Remove Stylist?
  <p>@Html.ActionLink("Clients", "Index", "Clients") || @Html.ActionLink("Stylists", "Index") || @Html.ActionLink("Home", "Index", "Home")</p>
</h1>

<div class="container centerContent">
  <br>
  <h5 class="deleteName"><strong>Name: </strong>@Html.DisplayFor(model => model.Name)</h5>
  @using (Html.BeginForm())
  {
    <input type="submit" value="Delete" class = "btn btn-secondary"/>
    <input type="button" value="Cancel" onclick="location.href='@Url.Action("Show", "Stylists", new {id = Model.StylistId})';" class="btn btn-secondary" />
  }
  <br>
</div>